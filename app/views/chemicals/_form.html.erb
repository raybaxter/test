<% form_for(@chemical) do |f| %>

<%= f.error_messages %>

<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :cas_number %><br />
  <%= f.text_field :cas_number %>
</p>
<p>
  <%= f.label :amount %><br />
  <%= f.text_field :amount %>
</p>
<p>
  <%= f.label :unit %><br />
  <%= f.text_field :unit %>
</p>
<p>
  <%= f.label :vendor_id %><br />
  <%= collection_select(:chemical, :vendor_id, all_vendors, :id, :name, {:prompt => true}) %>
</p>
<p>
  <%= f.submit button_name %>
</p>
<% end %>
